#This is the kivy file which is used to form a layout of the final output
BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation:'horizontal'
        BoxLayout:
            orientation:'vertical'
            size_hint_x: 0.3
            Button:
                text: 'List required'
                on_press: app.handle_required()
            Button:
                text: 'List completed'
                on_press: app.handle_completed()

            Label:
                text: 'Add New Book...'
                color:(0.8,0,0.3,1)

            Label:
                text: 'Title'
                color: (0.8,0,0.3,1)

            TextInput:
                id: input_title
                multiline: False
                write_tab: False
                text: ''
            Label:
                text: 'Author'
                color: (0.8,0,0.3,1)

            TextInput:
                id: input_author
                #for using tab key between text inputs
                multiline: False
                write_tab: False
                text: ''
            Label:
                text: 'Pages'
                color:(0.8,0,0.3,1)

            TextInput:
                id: input_pages
                text: ''
                multiline: False
                write_tab: False

            Button:
                text: 'Add item'
                foreground_color:(0.8,0,0.3,1)
                on_press: app.book_to_be_added(input_title,input_author,input_pages)

            Button:
                text: 'Clear'
                on_press: app.clear_all()

        BoxLayout:
            orientation:'vertical'
            Label:
                text: 'Total pages to read'
                color: (1, 1, 0, 1)
                id: pages
                size_hint_y: 0.3
            GridLayout:
                id:entries
                cols: 1
                orientation: 'vertical'

            Label:
                text:"Click Books to mark them as completed"
                color: (1, 1, 0, 1)
                id:status_text
                size_hint_y: 0.3
